<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.DetailTableActivity"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="Detail Booking Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_width="350dp"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="ID Booking : "
                android:id="@+id/tv_detailidbooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:text="Table Number : "
                android:id="@+id/tv_notable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

            <TextView
                android:text="Date Booked : "
                android:id="@+id/tv_detaildate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>