<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="50dp"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BookingActivity">


    <TextView
        android:textSize="30dp"
        android:text="Silahkan Pilih Meja Berikut"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:gravity="center"
        android:text="FYI : 1 Selected Table Only for 4 Person. Price 200k/Table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/tv_counttable"
            android:gravity="center"
            android:text="Jumlah Table"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>


    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/chair1"
                android:background="@drawable/chair"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/chair2"
                android:background="@drawable/chair"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/chair3"
                android:background="@drawable/chair"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/chair4"
                android:background="@drawable/chair"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"/>
            <Button
                android:id="@+id/chair5"
                android:background="@drawable/chair"
                android:layout_width="50dp"
                android:layout_height="50dp" />


        </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chair6"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair7"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair8"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair9"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair10"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chair11"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair12"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair13"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair14"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"/>
        <Button
            android:id="@+id/chair15"
            android:background="@drawable/chair"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_setdate"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_setdate"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pilih Tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="10dp"
        android:id="@+id/btn_settime"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_settime"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Pilih Jam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/hapustable"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp">

        <TextView
            android:gravity="center"
            android:text="Hapus Tabel"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/btn_cekout"
        app:cardCornerRadius="15dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="50dp">

        <TextView

            android:gravity="center"
            android:text="Check Out"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
    </androidx.cardview.widget.CardView>



</LinearLayout>